

<h1>Reservar sala</h1>

<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Sala</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.full_name %></td>
        <td><%= booking.email %></td>
        <td><%= booking.room %></td>
        <td><%= booking.date %></td>
        <td><%= link_to 'Ver reserva', booking, class:"btn btn-primary" %></td>
        <td><%= link_to 'Editar reserva', edit_booking_path(booking), class:"btn btn-secondary" %></td>
        <td><%= link_to 'Cancelar reserva', booking, method: :delete, data: { confirm: 'Tem certeza que deseja cancelar a reserva?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'Nova reserva', new_booking_path, class:"btn btn-success" %>
<% end %>