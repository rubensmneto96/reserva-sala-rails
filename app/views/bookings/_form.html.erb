<%= form_with(model: booking) do |form| %>
  <% if booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
        <% booking.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :full_name %>
    <%= form.text_field :full_name, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :room %>
    <%= form.text_field :room, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.number_field :user_id, id: :booking_user_id, class:"form-control", value: current_user.id, type: :hidden %>
  </div>

  <br>

  <div class="field form-group">
    <%= form.label :date %>
    <%= form.datetime_select :date %>
  </div>

  <br>

  <div class="actions">
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>
